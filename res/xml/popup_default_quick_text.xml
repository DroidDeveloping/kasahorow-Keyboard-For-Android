<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:ask="http://schemas.android.com/apk/res-auto"
          android:keyHeight="@integer/key_normal_height"
          android:keyWidth="15%p">

    <Row android:rowEdgeFlags="top">
        <Key
                android:keyEdgeFlags="left"
                android:keyLabel="\u263a"
                android:keyOutputText="\u263a\u0020"/>
        <Key
                android:keyLabel="\u270a"
                android:keyOutputText="\u270a\u0020"
                ask:shiftedKeyLabel="\u270a"/>
        <Key
                android:keyLabel="\u2764"
                android:keyOutputText="\u2764\u0020"
                ask:shiftedKeyLabel="\u2764"/>
        <Key
                android:keyLabel="\u2728"
                android:keyOutputText="\u2728\u0020"/>
        <Key
                android:keyLabel="\u2714"
                android:keyOutputText="\u2714\u0020"/>
        <Key
                android:keyEdgeFlags="right"
                android:keyLabel="\u274c"
                android:keyOutputText="\u274c\u0020"
                ask:shiftedKeyLabel=":cross:"/>
    </Row>
    <Row>
        <Key
                android:keyEdgeFlags="left"
                android:keyLabel="♥"
                android:keyOutputText="♥"/>
        <Key
                android:keyLabel=":-*"
                android:keyOutputText=":-*\u0020"/>
        <Key
                android:keyLabel="★"
                android:keyOutputText="★"/>
        <Key
                android:keyLabel="♬"
                android:keyOutputText="♬"/>
        <Key
                android:keyLabel="\u2614"
                android:keyOutputText="\u2614\u0020"/>
        <Key
                android:keyEdgeFlags="right"
                android:keyLabel=":-/﻿"
                android:keyOutputText=":-/﻿\u0020"/>
    </Row>
    <Row android:rowEdgeFlags="bottom">
        <Key
                android:keyEdgeFlags="left"
                android:keyLabel=":-("
                android:keyOutputText=":-(\u0020"/>
        <Key
                android:keyLabel="\u26ea"
                android:keyOutputText="\u26ea\u0020"/>
        <Key
                android:keyLabel=";-)"
                android:keyOutputText=";-)\u0020"/>
        <Key
                android:keyLabel="\u261d"
                android:keyOutputText="\u261d\u0020"/>
        <Key
                android:keyLabel="\u26bd"
                android:keyOutputText="\u26bd\u0020"/>
        <Key
                android:keyEdgeFlags="right"
                android:keyLabel="\u26fd"
                android:keyOutputText="\u26fd\u0020"/>
    </Row>

</Keyboard>
